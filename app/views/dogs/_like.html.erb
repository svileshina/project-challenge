<div class="likes">
  <% if @dog.user != current_user and !@like%>
    <%= link_to dog_likes_path(dog), remote: true, class: "button empty", method: :post do %>
      <span><i class="fas fa-heart"></i></span>
    <% end %>
  <% end %>
  <% if @like %>
    <%= link_to dog_like_path(dog, @like.id), remote: true, class: "button full", method: :delete do %>
      <span><i class="fas fa-heart"></i></span>
    <% end %>
  <% end %>
  <span><small> Likes: </small></span> <%= dog.likes.count %>
</div>